---
layout: compress
permalink: /umq-events-feed.xml
# Atom Feed for UMQ-Events
---

{% capture source %}
<feed xmlns="http://www.w3.org/2005/Atom">
  <id>{{ "/umq-events/" | absolute_url }}</id>
  <title>UMQ-Events - {{ site.title }}</title>
  <subtitle>Quantum Computing Events and Reading Group</subtitle>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <author>
    <name>{{ site.social.name }}</name>
    <uri>{{ "/" | absolute_url }}</uri>
  </author>
  <link rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}"/>
  <link rel="alternate" type="text/html" hreflang="{{ site.alt_lang | default: site.lang }}"
    href="{{ '/umq-events/' | absolute_url }}"/>
  <generator uri="https://jekyllrb.com/" version="{{ jekyll.version }}">Jekyll</generator>
  <rights> Â© {{ 'now' | date: '%Y' }} {{ site.social.name }} </rights>
  <icon>{{ site.baseurl }}/assets/img/favicons/favicon.ico</icon>
  <logo>{{ site.baseurl }}/assets/img/favicons/favicon-96x96.png</logo>

{% assign sorted_events = site.umq_events | sort: 'event_date' | reverse %}
{% for event in sorted_events limit: 10 %}
  {% unless event.hidden %}
  {% assign event_absolute_url = event.url | absolute_url %}
  <entry>
    <title>{{ event.title }}</title>
    <link href="{{ event_absolute_url }}" rel="alternate" type="text/html" title="{{ event.title | xml_escape }}" />
    <published>{{ event.event_date | date_to_xmlschema }}</published>
    <updated>{{ event.last_modified_at | default: event.event_date | date_to_xmlschema }}</updated>
    <id>{{ event_absolute_url }}</id>
    <content type="text/html" src="{{ event_absolute_url }}" />
    <author>
      <name>{{ event.presenter | default: site.social.name }}</name>
    </author>
    
    {% if event.location %}
    <category term="{{ event.location }}" />
    {% endif %}
    
    <summary>
      {% if event.abstract %}
        {{ event.abstract | strip_html | truncate: 400 }}
      {% else %}
        Event: {{ event.title }}{% if event.presenter %} - Presented by {{ event.presenter }}{% endif %}{% if event.event_date %} on {{ event.event_date | date: "%B %d, %Y" }}{% endif %}{% if event.time %} at {{ event.time }}{% endif %}{% if event.location %} - Location: {{ event.location }}{% endif %}
      {% endif %}
    </summary>
  </entry>
  {% endunless %}
{% endfor %}
</feed>
{% endcapture %}
{{ source | replace: '&', '&amp;' }}